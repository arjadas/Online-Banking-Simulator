<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>



    <body>
        <%- include('./partials/nav.ejs') %>
            <div>
                <h1>About</h1>
            </div>
            <div class="content">
                <h2>All items</h2>

                <% if (items.length> 0) { %>
                    <% items.forEach(items=> { %>
                        <h3 class="title">
                            <%= items.name %>
                        </h3>
                        <p class="snippet">
                            <%= items.description %>
                        </p>
                        <% }) %>
                            <% } else {%>
                                <p>No items to display</p>
                                <% } %>

            </div>
            <%- include('./partials/footer.ejs') %>
    </body>

</html>